    var marker = new L.marker([43.6024, 3.87414], {draggable: true}).addTo(map);
    marker.on('dragend', function(evt) {
        var latlng = this.getLatLng();
            oops.checkPlace(latlng.lat, latlng.lng);
    });
    map.addLayer(osm);
    var popup = L.popup();

