script(src="/js/leaflet/leaflet.js")
script.
    var map = new L.Map('map', {center: new L.LatLng(43.6100, 3.8742), zoom: 13});
    var osm = new L.TileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png');
    map.addLayer(osm);

    var pd = L.marker([43.6100, 3.8742]).addTo(map).dragging.enable();
    var popup = L.popup();

    function onMapClick(e) {
        oops.checkPlace(e.latlng.lat, e.latlng.lng);
        popup
         .setLatLng(e.latlng)
            .setContent("You clicked the map at " + e.latlng.toString())
            .openOn(map);
    }
    map.on('click',onMapClick);
    pd.on('dragend', function (e) {
        popup
            .setLatLng(e.latlng)
            .setContent('Hey ' + e.LatLng.toString() + ' !')
            .openOn(map);
    });
